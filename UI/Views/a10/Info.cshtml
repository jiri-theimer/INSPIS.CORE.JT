@model UI.Models.Recpage.a10RecPage
@inject BL.Factory _f

@{
    ViewData["Title"] = "Typ akce";
    Layout = "~/Views/Shared/_LayoutSubform.cshtml";

}

@addTagHelper *, UI

<div class="modal_record_container">
    <div class="form-row">
        <label class="col-sm-1 col-md-2 col-form-label">Typ akce:</label>
        <div class="col-sm-9 col-md-8">
            <myval value="@Model.Rec.a10Name"></myval>
        </div>
        @if (_f.CurrentUser.TestPermission(BO.PermValueEnum.AdminGlobal_Ciselniky))
        {
            <div class="col-sm-2 col-md-2">
                <a href="javascript:_window_open('/a10/Record?pid=@(Model.pid)')">Administrace</a>
            </div>
        }
    </div>
    <div class="form-row">
        <label class="col-sm-1 col-md-2 col-form-label">Workflow šablona:</label>
        <div class="col-sm-11 col-md-10">
            <myval value="@Model.Rec.b01Name"></myval>
        </div>
    </div>


</div>
<hr />
<div>
    <input type="checkbox" asp-for="Rec.a10IsUse_A08" />
