@model UI.Models.Record.j25Record

@{

    Layout = "~/Views/Shared/_LayoutRecord.cshtml";
    if (Model.Rec == null) return;
    Model.PageTitle = "Důvod rezervace";
}
@addTagHelper *, UI

<div class="modal_record_container">

    <div class="form-row">
        <label class="col-sm-1 col-md-2 col-form-label">Název:</label>
        <div class="col-sm-11 col-md-10">
            <input class="form-control" asp-for="Rec.j25Name" />
            <span asp-validation-for="Rec.j25Name" class="text-danger"></span>
        </div>

    </div>
    

</div>

