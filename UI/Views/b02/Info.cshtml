@model UI.Models.Recpage.b02RecPage
@inject BL.Factory _f
@{
    ViewData["Title"] = "Workflow stav";
    Layout = "~/Views/Shared/_LayoutSubform.cshtml";

}

@addTagHelper *, UI

    <div class="modal_record_container">
        <div class="row">
            <label class="col-sm-1 col-md-2 col-form-label">@_f.tra("Stav"):</label>
            <div class="col-sm-9 col-md-8">
                <myval value="@Model.Rec.b02Name"></myval>
            </div>
            @if (_f.CurrentUser.TestPermission(BO.j05PermValuEnum.AdminGlobal_Ciselniky))
            {
                <div class="col-sm-2 col-md-2">
                    <a href="javascript:_window_open('/b02/Record?pid=@(Model.pid)')">@_f.tra("Administrace")</a>
                </div>
            }
            
        </div>
        <div class="row my-2">
            <label class="col-sm-1 col-md-2 col-form-label">@_f.tra("Workflow šablona"):</label>
            <div class="col-sm-9 col-md-8">
                <myval value="@Model.Rec.b01Name"></myval>
            </div>
            @if (_f.CurrentUser.TestPermission(BO.j05PermValuEnum.WorkflowDesigner))
            {
                <div class="col-sm-2 col-md-2">
                    <a href="/AdminOneWorkflow/Index?b01id=@Model.Rec.b01ID" target="_blank">@_f.tra("Workflow návhrář")</a>
                </div>
            }
        </div>
        <div class="row">
            <label class="col-sm-1 col-md-2 col-form-label">@_f.tra("Kód"):</label>
            <div class="col-sm-4 col-md-4">
                <myval value="@Model.Rec.b02Ident"></myval>
            </div>
        </div>
        <div class="row my-2">
            <div class="col-sm-12 col-md-12" style="background-color:@(Model.Rec.b02Color);">
                @_f.tra("Barva")

            </div>
        </div>

    </div>
