@model UI.Models.Recpage.a08RecPage
@inject BL.Factory _f

@{
    ViewData["Title"] = "Téma akce";
    Layout = "~/Views/Shared/_LayoutSubform.cshtml";

}

@addTagHelper *, UI

<div class="modal_record_container">
    <div class="form-row">
        <div class="col-sm-10 col-md-10">
            <myval value="@Model.Rec.a08Name"></myval>

        </div>
        @if (_f.CurrentUser.TestPermission(BO.PermValueEnum.AdminGlobal_Ciselniky))
        {
            <div class="col-sm-2 col-md-2">
                <a href="javascript:_window_open('/a08/Record?pid=@(Model.pid)')">Administrace</a>
            </div>
        }
    </div>
    @Html.Raw(Model.TagHtml)
</div>
<strong>Povolené formuláře k tématu:</strong>
<div id="divA12"></div>




<script type="text/javascript">
    $(document).ready(function () {

        refresh_a12_table();

    });




    function refresh_a12_table() {
        var url = "@Url.Action("GetWorkTable", "Common")";

        $.post(url, { entity: "f06Form", master_entity:"a08Theme",master_pid:"@Model.pid" }, function (data) {
            $("#divA12").html(data);

        });
    }


</script>




