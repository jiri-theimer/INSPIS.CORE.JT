@inject BL.RunningApp _app
@inject BL.Factory _f

@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@addTagHelper *, UI

<div class="modal_record_container">
    <h4>@_f.tra("O aplikaci")</h4>



    <div class="row">
        <label class="col-sm-1 col-md-2 col-form-label">@_f.tra("Název"):</label>
        <div class="col-sm-11 col-md-10">
            
            <myval value="@_app.AppName"></myval>

        </div>

    </div>

    <div class="row my-2">
        <label class="col-sm-1 col-md-2 col-form-label">@_f.tra("Verze"):</label>
        <div class="col-sm-11 col-md-10">
            
            <myval value="@(_app.AppVersion+", "+_app.AppBuild)"></myval>

        </div>

    </div>



    <div class="row my-2">
        <label class="col-sm-1 col-md-2 col-form-label">@_f.tra("Vývoj"):</label>
        <div class="col-sm-11 col-md-10">
            
            <myval value="@("Jiří Theimer")" datatype="link" linkurl="mailto:jiri.theimer@gmail.com"></myval>

        </div>

    </div>

    <div class="row" style="margin-top:20px;">
        <label class="col-sm-1 col-md-2 col-form-label">@_f.tra("Technická podpora"):</label>
        <div class="col-sm-11 col-md-10">
            @if (_f.CurrentUser.j03LiveChatTimestamp == null)
            {
                <button class="btn btn-sm btn-secondary py-0 py-0" title="Zapnout LIVE CHAT-BOX" style="font-size:125%;" onclick="handle_smartsupp(1)">☊</button>
            }
            else
            {
                <button class="btn btn-sm btn-danger py-0 py-0" title="Vypnout LIVE CHAT-BOX" style="font-size:125%;" onclick="handle_smartsupp(2)">☊</button>
            }


        </div>

    </div>

</div>

