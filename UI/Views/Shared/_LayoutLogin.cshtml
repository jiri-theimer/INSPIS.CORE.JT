@inject BL.RunningApp _app

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Přihlásit se</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="/images/favicon_@(_app.LogoImageSuffix).ico" rel="shortcut icon" type="image/x-icon" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <header>
        
    </header>
    <div class="container-fluid px-0">        
        <div style="background-color:@_app.BgColor;margin-bottom:30px;">
            <img src="/images/logo_login_@(_app.LogoImageSuffix).png" style="display:block;width:40%;margin-left:auto;margin-right:auto;padding-top:30px;padding-bottom:30px;" />
        </div>
        <main role="main">
            @RenderBody()
        </main>
        
    </div>

    <footer style="border-top:1px solid lightgray;position:fixed;bottom:100px;width:100%;">
        <div style="margin:auto;max-width:500px;">
            👌@_app.AppName <small>@_app.AppVersion</small><small style="margin-left:10px;color:silver;">@_app.AppBuild</small>
        </div>
    </footer>
    
    
    @RenderSection("Scripts", required: false)
</body>
</html>