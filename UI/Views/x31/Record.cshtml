@model UI.Models.Record.x31Record

@{

    Layout = "~/Views/Shared/_LayoutRecord.cshtml";
    if (Model.Rec == null) return;
    Model.PageTitle = "Tisková sestava";
}
@addTagHelper *, UI



    <div class="modal_record_container">
        <div class="form-row">
            <label class="col-sm-1 col-md-2 col-form-label">Název:</label>
            <div class="col-sm-9 col-md-8">
                <input class="form-control" asp-for="Rec.x31Name" />
                <span asp-validation-for="Rec.x31Name" class="text-danger"></span>
            </div>



        </div>
        <div class="form-row my-2">
            <label class="col-sm-1 col-md-2 col-form-label">Formát:</label>
            <div class="col-sm-3 col-md-3">
                <select id="x31ReportFormat" asp-for="Rec.x31ReportFormat" class="form-control">
                    <option value="Telerik">TELERIK</option>
                    <option value="DOC">DOCX</option>
                    <option value="XLS">XLSX</option>
                    <option value="MSREPORTING">MS REPORTING services</option>
                </select>
            </div>
        </div>
        <div class="form-row my-2">
            <label class="col-sm-1 col-md-2 col-form-label">Kód sestavy:</label>
            <div class="col-sm-5 col-md-4">
                <input class="form-control" asp-for="Rec.x31PID" />
                <span asp-validation-for="Rec.x31PID" class="text-danger"></span>
            </div>
            <div class="col-sm-6 col-md-6">
                <input type="checkbox" asp-for="Rec.x31Is4SingleRecord" />
                <label class="col-form-label" for="Rec_x31Is4SingleRecord">Sestava pro účely zobrazení jednoho vybraného záznamu</label>

            </div>
        </div>
        <div class="form-row my-2">
            <label class="col-sm-1 col-md-2 col-form-label">Přístupová práva k sestavě:</label>
            <div class="col-sm-11 col-md-10">
                <mycombochecklist asp-for="@Model.j04IDs" entity="j04UserRole" selectedtext="@Model.j04Names" placeholder="Vybrat aplikační role..."></mycombochecklist>
            </div>


        </div>
        <div class="form-row my-2">
            <label class="col-sm-1 col-md-2 col-form-label">Zařazení do kategorií:</label>
            <div class="col-sm-11 col-md-10">
                <mycombochecklist asp-for="@Model.x32IDs" entity="x32ReportType" selectedtext="@Model.x32Names" placeholder="Vybrat kategorie..."></mycombochecklist>
            </div>


        </div>
        <div class="form-row my-2">
            <label class="col-sm-1 col-md-2 col-form-label">Entita:</label>
            <div class="col-sm-5 col-md-4">
                <mycombo entity="x29Entity" asp-for="Rec.x29ID" selectedtext="Rec.x29Name" view-flag="2" param1="x29IsReport"></mycombo>
            </div>
        </div>

        <div class="form-row my-2">
            <textarea asp-for="Rec.x31Description" class="form-control" placeholder="Podrobný popis"></textarea>
            <span asp-validation-for="Rec.x31Description" class="text-danger"></span>
        </div>



    </div>





<script type="text/javascript">
    $(document).ready(function () {



    });






</script>



