@model UI.Models.Record.x32Record

@{

    Layout = "~/Views/Shared/_LayoutRecord.cshtml";
    if (Model.Rec == null) return;
    Model.PageTitle = "Kategorie tiskové sestavy";
}
@addTagHelper *, UI

    <div class="modal_record_container">
        <div class="form-row">
            <label class="col-sm-1 col-md-2 col-form-label">Název:</label>
            <div class="col-sm-11 col-md-10">
                <input class="form-control" asp-for="Rec.x32Name" />
                <span asp-validation-for="Rec.x32Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row my-2">
            <label class="col-sm-1 col-md-2 col-form-label">Nadřízená kategorie:</label>
            <div class="col-sm-11 col-md-10">
                <mycombo entity="x32FormType" asp-for="Rec.x32ParentID" selectedtext="Rec.ParentName"></mycombo>
            </div>
        </div>

        <div class="form-row my-2">
            <label class="col-sm-1 col-md-2 col-form-label">Index pořadí:</label>
            <div class="col-sm-1 col-md-1">
                <mynumber asp-for="Rec.x32Ordinal" decimal-digits="0"></mynumber>
            </div>

        </div>

        <div class="form-row my-2">
            <textarea asp-for="Rec.x32Description" class="form-control" placeholder="Podrobný popis"></textarea>
            <span asp-validation-for="Rec.x32Description" class="text-danger"></span>
        </div>



    </div>





<script type="text/javascript">
    $(document).ready(function () {



    });






</script>



