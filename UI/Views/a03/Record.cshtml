@model UI.Models.Record.a03Record

@{

    Layout = "~/Views/Shared/_LayoutRecord.cshtml";
    if (Model.Rec == null) return;
    Model.PageTitle = "Instituce";
}
@addTagHelper *, UI


<div class="tabs_container_record">
    <!-- Tab panes -->
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a id="link_tab1" class="nav-link" data-toggle="tab" href="#tab1">Vlastnosti</a>
        </li>
        <li class="nav-item">
            <a id="link_tab2" class="nav-link" data-toggle="tab" href="#tab2">Portál</a>
        </li>

    </ul>
</div>


<div class="modal_record_container">
    <div class="tab-content">

        <div class="tab-pane" id="tab1">
            <!-- Tab1 -->
            <div class="form-row">
                <label class="col-sm-1 col-md-2 col-form-label">Název:</label>
                <div class="col-sm-8 col-md-7">
                    <input class="form-control" asp-for="Rec.a03Name" />
                    <span asp-validation-for="Rec.a03Name" class="text-danger"></span>
                </div>

                <div class="col-sm-3 col-md-3">
                    <input type="checkbox" asp-for="Rec.a03IsTestRecord" />
                    <label class="col-form-label" for="Rec_a03IsTestRecord">Testovací záznam</label>

                </div>
            </div>
            <div class="form-row my-2">
                <label class="col-sm-1 col-md-2 col-form-label">REDIZO:</label>
                <div class="col-sm-3 col-md-2">
                    <input class="form-control" asp-for="Rec.a03REDIZO" />
                    <span asp-validation-for="Rec.a03REDIZO" class="text-danger"></span>
                </div>
                <label class="col-sm-1 col-md-1 col-form-label">IČ:</label>
                <div class="col-sm-2 col-md-2">
                    <input class="form-control" asp-for="Rec.a03ICO" />
                    <span asp-validation-for="Rec.a03ICO" class="text-danger"></span>
                </div>
                <label class="col-sm-1 col-md-1 col-form-label">Ředitel:</label>
                <div class="col-sm-4 col-md-4">
                    <input class="form-control" asp-for="Rec.a03DirectorFullName" />
                    <span asp-validation-for="Rec.a03DirectorFullName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row my-2">
                <label class="col-sm-1 col-md-2 col-form-label">Typ instituce:</label>
                <div class="col-sm-2 col-md-2">
                    <select asp-for="Rec.a06ID" class="form-control">
                        <option></option>
                        <option value="1">Škola</option>
                        <option value="2">Zřizovatel</option>
                    </select>
                </div>
                <label class="col-sm-1 col-md-1 col-form-label">Právní forma:</label>

                <div class="col-sm-7 col-md-7">
                    <mycombo entity="a21InstitutionLegalType" asp-for="Rec.a21ID" selectedtext="Rec.a21Name"></mycombo>

                </div>
            </div>
            <div class="form-row my-2">
                <label class="col-sm-1 col-md-2 col-form-label">Kraj:</label>
                <div class="col-sm-7 col-md-6">
                    <mycombo entity="a05Region" asp-for="Rec.a05ID" selectedtext="Rec.a05Name"></mycombo>

                </div>
            </div>

            <div class="form-row my-2">
                <label class="col-sm-1 col-md-2 col-form-label">Zřizovatel:</label>
                <div class="col-sm-7 col-md-6">
                    <mycombo entity="a03Institution" asp-for="Rec.a03ID_Founder" selectedtext="@Model.FounderName" filter-flag="1" masterprefix="a06" masterpid="2" event_after_changevalue="founder_change"></mycombo>

                </div>
                <label class="col-sm-1 col-md-1 col-form-label mx-0 px-0">Typ zřizovatele:</label>
                <div class="col-sm-3 col-md-3">
                    <mycombo entity="a09FounderType" asp-for="Rec.a09ID" selectedtext="Rec.a09Name" view-flag="2"></mycombo>

                </div>
            </div>
            <hr />
            <div class="form-row my-2">
                <label class="col-sm-1 col-md-2 col-form-label">Ulice:</label>
                <div class="col-sm-5 col-md-4">
                    <input class="form-control" asp-for="Rec.a03Street" />
                    <span asp-validation-for="Rec.a03Street" class="text-danger"></span>
                </div>


            </div>
            <div class="form-row my-2">
                <label class="col-sm-1 col-md-2 col-form-label">Město:</label>
                <div class="col-sm-5 col-md-4">
                    <input class="form-control" asp-for="Rec.a03City" />
                    <span asp-validation-for="Rec.a03City" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row my-2">
                <label class="col-sm-1 col-md-2 col-form-label">PSČ:</label>
                <div class="col-sm-1 col-md-1">
                    <input class="form-control" asp-for="Rec.a03PostCode" />
                    <span asp-validation-for="Rec.a03PostCode" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="form-row my-2">
                <label class="col-sm-1 col-md-2 col-form-label">E-mail:</label>
                <div class="col-sm-5 col-md-4">
                    <input class="form-control" type="email" asp-for="Rec.a03Email" />
                    <span asp-validation-for="Rec.a03Email" class="text-danger"></span>
                </div>
                <label class="col-sm-1 col-md-1 col-form-label">WWW:</label>
                <div class="col-sm-5 col-md-5">
                    <input class="form-control" type="url" asp-for="Rec.a03Web" />
                    <span asp-validation-for="Rec.a03Web" class="text-danger"></span>
                </div>

            </div>
            <div class="form-row my-2">
                <label class="col-sm-1 col-md-2 col-form-label">Mobil:</label>
                <div class="col-sm-5 col-md-4">
                    <input class="form-control" type="tel" asp-for="Rec.a03Mobile" />
                    <span asp-validation-for="Rec.a03Mobile" class="text-danger"></span>
                </div>
                <label class="col-sm-1 col-md-1 col-form-label">Pevný TEL:</label>
                <div class="col-sm-5 col-md-5">
                    <input class="form-control" type="tel" asp-for="Rec.a03Phone" />
                    <span asp-validation-for="Rec.a03Phone" class="text-danger"></span>
                </div>

            </div>
            <mystitky entity="a03Institution" asp-for="@Model.TagPids" tagnames="@Model.TagNames" taghtml="@Model.TagHtml"></mystitky>


        </div>
        <div class="tab-pane" id="tab2">
            <!-- Tab2 -->
            <p></p>
            <select asp-for="Rec.a03SchoolPortalFlag" class="form-control">
                <option value="NotPublish">Škola nepoužívá školní web na portále</option>
                <option value="Publish">Škola používá (a publikuje) školní web na portále</option>
            </select>

        </div>
    </div>
</div>






<script type="text/javascript">
    function founder_change(a03id) {
        _notify_message(a03id);
    }
</script>
