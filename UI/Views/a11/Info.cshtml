@model UI.Models.Recpage.a11RecPage
@inject BL.Factory _f

@{
    ViewData["Title"] = "Formulář v akci";
    Layout = "~/Views/Shared/_LayoutSubform.cshtml";

}

@addTagHelper *, UI

<div class="modal_record_container">
    <h4>Formulář v akci: @Model.RecA01.a01Signature</h4>
    <div class="form-row">
        <div class="col-sm-10 col-md-10">
            <myval datatype="html" value="@Model.Rec.FullNameHtml"></myval>

        </div>
        
        @if (Model.RecPermission.PermValue==BO.a01EventPermissionENUM.ShareTeam_Leader || _f.CurrentUser.TestPermission(BO.PermValueEnum.AdminGlobal_Ciselniky))
        {
            <div class="colsm-2 col-md-2">
                <a href="javascript:_window_open('/a11/Record?pid=@(Model.pid)')">Upravit</a>
            </div>
        }
    </div>
    
    <div class="form-row">
        <label class="col-sm-1 col-md-2 col-form-label">Vloženo do akce:</label>
        <div class="col-sm-5 col-md-5">
            <myval value="@(Model.Rec.UserInsert+"/"+BO.BAS.ObjectDateTime2String(Model.Rec.DateInsert))"></myval>
        </div>
    </div>
  
</div>




<script type="text/javascript">
    $(document).ready(function () {

        

    });




    


</script>


