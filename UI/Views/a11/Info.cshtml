@model UI.Models.Recpage.a11RecPage
@inject BL.Factory _f

@{
    Model.PageTitle = _f.tra("Formulář v akci");
    Layout = "~/Views/Shared/_LayoutSubform.cshtml";

}

@addTagHelper *, UI

<div class="info_record_container">
    <h4>@Model.PageTitle: @Model.RecA01.a01Signature</h4>
    <div class="row">
        <div class="col-sm-10 col-md-10">
            <myval datatype="html" value="@Model.Rec.FullNameHtml"></myval>

        </div>
        
        @if (Model.RecPermission.PermValue==BO.a01EventPermissionENUM.ShareTeam_Leader || _f.CurrentUser.TestPermission(BO.j05PermValuEnum.AdminGlobal_Ciselniky))
        {
            <div class="colsm-2 col-md-2">
                <a href="javascript:_window_open('/a11/Record?pid=@(Model.pid)')">@_f.tra("Upravit")</a>
            </div>
        }
    </div>
    
    <div class="row">
        <label class="col-sm-1 col-md-2 col-form-label">@_f.tra("Vloženo do akce"):</label>
        <div class="col-sm-5 col-md-5">
            <myval value="@(Model.Rec.UserInsert+"/"+BO.BAS.ObjectDateTime2String(Model.Rec.DateInsert))"></myval>
        </div>
    </div>
    <div class="row my-2">
        @if (Model.Rec.a11IsPoll == false && Model.Rec.isclosed == false)
        {
            <a href="@(_f.App.UiftUrl+"/Formular/"+Model.Rec.pid.ToString())" style="margin-right:20px;" target="_blank">@_f.tra("Vyplnit")</a>
        }
        <a href="@(_f.App.UiftUrl+"/Preview/Formular/"+Model.Rec.pid.ToString())" style="margin-right:20px;" target="_blank">@_f.tra("Náhled")</a>

        <a href="javascript:_window_open('/a11/ValidateForms?pid=@Model.Rec.pid')">@_f.tra("Otestovat vyplnění formuláře")</a>
    </div>
  
</div>




<script type="text/javascript">
    $(document).ready(function () {

        

    });




    


</script>


