@model UIFT.Models.IOtazka
@inject UIFT.Repository.RepositoryFactory factory
@{
    var rep = factory.Get();
    string url = ((Otazka)Model).Base.f19LinkURL;
    if (string.IsNullOrEmpty(url))
    {
        url = "alert('" + rep.BL.tra("Tlačítko nemá definovanou funkci!") +"')";
    }
    else
    {
        url = "location.href='" + url + "'";
    }
}
<button type="button" id="Answer_@(Model.PID)" onclick="@url;" @(Model.ReadOnly ? "disabled=disabled" : "")>@rep.BL.tra("Spustit")</button>