@model UIFT.Models.IOtazka
@inject UIFT.Repository.RepositoryFactory factory
@{
    var rep = factory.Get();
}
@if (Model.CanBePublished)
{
    <div class="publishQuestion">
        <label><input type="checkbox" id="Publish_@Model.PID" name="Publish" value="@Model.PID" @(Model.IsPublished ? "checked" : "") /> @rep.BL.tra("přeji si publikovat odpověď na tuto otázku")</label>
    </div>
}